        <TextBlock x:Name="kakaka" Text="lakaka" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="Combobox1" SelectionChanged="ComboBox_SelectionChanged" PlaceholderText="автомобиль ..." HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
