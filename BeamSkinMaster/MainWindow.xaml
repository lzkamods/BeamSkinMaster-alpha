        <Frame x:Name="ContentFrame">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition  />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>

        <InfoBar VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0. 105"
            IsOpen="True"
            Severity="Warning"
            Title="TEST VERSION"
            Message="build 070923.9008A">
        </InfoBar>

        <ProgressBar x:Name="ProgressOnTop" ValueChanged="ProgressBarOn_ValueChanged" Width="569" Value="27" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10"/>
        
    </Grid>
</Window>
    
